{
  "name": "textbricks",
  "displayName": "TextBricks - Multi-Language Development Assistant",
  "description": "A VSCode extension providing structured templates for multiple languages to develop efficiently",
  "version": "0.2.1",
  "publisher": "timcsy",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/timcsy/textbricks-extensions.git"
  },
  "bugs": {
    "url": "https://github.com/timcsy/textbricks-extensions/issues"
  },
  "homepage": "https://github.com/timcsy/textbricks-extensions#readme",
  "icon": "assets/icons/TextBricks.ico",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Snippets",
    "Education"
  ],
  "keywords": [
    "programming",
    "multi-language",
    "extensible",
    "c",
    "python",
    "javascript",
    "productivity",
    "development",
    "templates",
    "code-snippets",
    "structured-templates",
    "efficiency"
  ],
  "main": "./dist/plugins/vscode/current/out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "textbricks-container",
          "title": "TextBricks",
          "icon": "assets/icons/TextBricks.svg"
        }
      ]
    },
    "views": {
      "textbricks-container": [
        {
          "id": "textbricks-webview",
          "name": "Templates",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "textbricks.refreshTemplates",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "textbricks.copyTemplate",
        "title": "Copy Template"
      },
      {
        "command": "textbricks.openTemplateManager",
        "title": "Open Template Manager",
        "icon": "$(settings-gear)"
      },
      {
        "command": "textbricks.createTemplate",
        "title": "Create New Template",
        "icon": "$(add)"
      },
      {
        "command": "textbricks.importTemplates",
        "title": "Import Templates",
        "icon": "$(cloud-download)"
      },
      {
        "command": "textbricks.exportTemplates",
        "title": "Export Templates",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "textbricks.showDocumentation",
        "title": "Show Template Documentation",
        "icon": "$(book)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "textbricks.refreshTemplates",
          "when": "view == textbricks-webview",
          "group": "navigation"
        },
        {
          "command": "textbricks.openTemplateManager",
          "when": "view == textbricks-webview",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "textbricks.openTemplateManager",
          "title": "TextBricks: Open Template Manager"
        },
        {
          "command": "textbricks.createTemplate",
          "title": "TextBricks: Create New Template"
        },
        {
          "command": "textbricks.importTemplates",
          "title": "TextBricks: Import Templates"
        },
        {
          "command": "textbricks.exportTemplates",
          "title": "TextBricks: Export Templates"
        },
        {
          "command": "textbricks.showDocumentation",
          "title": "TextBricks: Show Template Documentation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build:vscode && npm run copy-data:vscode",
    "compile": "tsc -p ./",
    "build:vscode": "npm run compile",
    "copy-data:vscode": "mkdir -p dist/plugins/vscode/current/out/data dist/plugins/vscode/current/out/assets && cp -r src/data/* dist/plugins/vscode/current/out/data/ 2>/dev/null || true && cp -r assets/* dist/plugins/vscode/current/out/assets/",
    "package:vscode": "vsce package --out dist/plugins/vscode/current/",
    "archive:vscode": "[ -f dist/plugins/vscode/current/*.vsix ] && mv dist/plugins/vscode/current/*.vsix dist/plugins/vscode/archive/ || echo 'No VSIX to archive'",
    "build": "npx tsc -b",
    "clean": "npx tsc -b --clean",
    "clean:dist": "rm -rf dist/temp/* dist/packages/*/",
    "watch": "npx tsc -b --watch",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint packages/*/src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.4"
  }
}