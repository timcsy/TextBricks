{
  "name": "textbricks",
  "displayName": "TextBricks - Multi-Language Development Assistant",
  "description": "A VSCode extension providing structured templates for multiple languages to develop efficiently",
  "version": "0.2.5",
  "publisher": "timcsy",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/timcsy/textbricks-extensions.git"
  },
  "bugs": {
    "url": "https://github.com/timcsy/textbricks-extensions/issues"
  },
  "homepage": "https://github.com/timcsy/textbricks-extensions#readme",
  "icon": "assets/icons/TextBricks.ico",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Snippets",
    "Education"
  ],
  "keywords": [
    "programming",
    "multi-language",
    "extensible",
    "c",
    "python",
    "javascript",
    "productivity",
    "development",
    "templates",
    "code-snippets",
    "structured-templates",
    "efficiency"
  ],
  "main": "./packages/vscode/dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "textbricks-container",
          "title": "TextBricks",
          "icon": "assets/icons/TextBricks.svg"
        }
      ]
    },
    "views": {
      "textbricks-container": [
        {
          "id": "textbricks-webview",
          "name": "Templates",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "TextBricks",
      "properties": {
        "textbricks.dataLocation": {
          "type": "string",
          "default": "",
          "description": "TextBricks 資料存儲位置（空值表示使用系統預設位置）",
          "scope": "application"
        },
        "textbricks.useSystemDefault": {
          "type": "boolean",
          "default": true,
          "description": "使用系統預設的資料存儲位置",
          "scope": "application"
        }
      }
    },
    "commands": [
      {
        "command": "textbricks.refreshTemplates",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "textbricks.copyTemplate",
        "title": "Copy Template"
      },
      {
        "command": "textbricks.openTextBricksManager",
        "title": "Open TextBricks Manager",
        "icon": "$(settings-gear)"
      },
      {
        "command": "textbricks.createTemplate",
        "title": "Create New Template",
        "icon": "$(add)"
      },
      {
        "command": "textbricks.importTemplates",
        "title": "Import Templates",
        "icon": "$(cloud-download)"
      },
      {
        "command": "textbricks.exportTemplates",
        "title": "Export Templates",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "textbricks.showDocumentation",
        "title": "Show Template Documentation",
        "icon": "$(book)"
      },
      {
        "command": "textbricks.openDataLocation",
        "title": "Open Data Storage Location",
        "icon": "$(folder-opened)"
      },
      {
        "command": "textbricks.changeDataLocation",
        "title": "Change Data Storage Location",
        "icon": "$(folder)"
      },
      {
        "command": "textbricks.resetToSystemDefault",
        "title": "Reset to System Default Location",
        "icon": "$(home)"
      },
      {
        "command": "textbricks.initializeDataLocation",
        "title": "Initialize Data Location",
        "icon": "$(database)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "textbricks.refreshTemplates",
          "when": "view == textbricks-webview",
          "group": "navigation"
        },
        {
          "command": "textbricks.openTextBricksManager",
          "when": "view == textbricks-webview",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "textbricks.openTextBricksManager",
          "title": "TextBricks: Open TextBricks Manager"
        },
        {
          "command": "textbricks.createTemplate",
          "title": "TextBricks: Create New Template"
        },
        {
          "command": "textbricks.importTemplates",
          "title": "TextBricks: Import Templates"
        },
        {
          "command": "textbricks.exportTemplates",
          "title": "TextBricks: Export Templates"
        },
        {
          "command": "textbricks.showDocumentation",
          "title": "TextBricks: Show Template Documentation"
        },
        {
          "command": "textbricks.openDataLocation",
          "title": "TextBricks: Open Data Storage Location"
        },
        {
          "command": "textbricks.changeDataLocation",
          "title": "TextBricks: Change Data Storage Location"
        },
        {
          "command": "textbricks.resetToSystemDefault",
          "title": "TextBricks: Reset to System Default Location"
        },
        {
          "command": "textbricks.initializeDataLocation",
          "title": "TextBricks: Initialize Data Location"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle:vscode",
    "bundle:vscode": "npm run build --workspaces && esbuild packages/vscode/src/extension.ts --bundle --outfile=packages/vscode/dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap && npm run copy-data:vscode",
    "compile": "npm run build --workspaces",
    "build:vscode": "npm run build --workspace=@textbricks/vscode",
    "copy-data:vscode": "mkdir -p packages/vscode/dist/data packages/vscode/dist/assets && cp -r data/* packages/vscode/dist/data/ 2>/dev/null || true && cp -r assets/* packages/vscode/dist/assets/",
    "package:vscode": "vsce package --out dist/plugins/vscode/current/",
    "package:vscode:versioned": "vsce package --out dist/plugins/vscode/v0.2.5/",
    "package:release": "npm run archive:vscode && npm run package:vscode && npm run link:current",
    "archive:vscode": "[ -f dist/plugins/vscode/current/*.vsix ] && mkdir -p dist/plugins/vscode/archive && mv dist/plugins/vscode/current/*.vsix dist/plugins/vscode/archive/ 2>/dev/null || true",
    "link:current": "mkdir -p dist/plugins/vscode && cd dist/plugins/vscode && rm -rf current && ln -sf v0.2.5 current",
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces && rm -rf dist",
    "clean:dist": "rm -rf dist/temp/* dist/packages/*/",
    "watch": "npm run build --workspaces --watch",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint packages/*/src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "esbuild": "^0.25.9",
    "eslint": "^8.28.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.4"
  }
}
