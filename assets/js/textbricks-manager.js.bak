    function bindTopicEvents(container) {
        // æ‘ºç–Š/å±•é–‹è™•ç†
        container.querySelectorAll('.topic-toggle').forEach(toggle => {
            toggle.addEventListener('click', (e) => {
                e.stopPropagation();
                const topicPath = toggle.dataset.topicPath;
                toggleTopicCollapse(topicPath);
