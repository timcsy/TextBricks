    // ==================== è·¯å¾‘èˆ‡è­˜åˆ¥ç¬¦è¼”åŠ©å‡½æ•¸ ====================
    // æ³¨æ„ï¼šé€™äº›æ˜¯åŒæ­¥å‡½æ•¸ï¼Œä½¿ç”¨æœ¬åœ°é‚è¼¯ã€‚Services å¯ç”¨æ–¼éœ€è¦ç¢ºä¿æ•¸æ“šæœ€æ–°çš„å ´æ™¯ã€‚

    /**
     * å¾ item æå–æ­£ç¢ºçš„è­˜åˆ¥ç¬¦
     * @param {Object} item - é …ç›®ç‰©ä»¶
     * @param {string} type - é …ç›®é¡å‹ ('template', 'topic', 'link', 'language')
     * @returns {string|null} - è­˜åˆ¥ç¬¦å­—ä¸²
     */
    function getItemIdentifier(item, type) {
        if (!item) return null;

        switch (type) {
            case 'template':
                // Template ç”¨ topicPath + name çµ„æˆå®Œæ•´è·¯å¾‘
                if (item.topicPath && item.name) {
                    return `${item.topicPath}/templates/${item.name}`;
                }
                return item.name || null;

            case 'topic':
                // Topic ç”¨ pathï¼ˆå­—ä¸²æ ¼å¼ï¼‰
                if (typeof item.path === 'string') return item.path;
                // å¦‚æœ path æ˜¯é™£åˆ—ï¼Œè½‰æ›ç‚ºå­—ä¸²
                if (Array.isArray(item.path)) return item.path.join('/');
                return item.name || null;

            case 'link':
                // Link ç”¨ name
                return item.name || null;

            case 'language':
                // Language ç”¨ name
                return item.name || null;

            default:
                console.warn(`Unknown item type: ${type}`);
                return null;
        }
    }

    /**
     * å»ºæ§‹ template çš„å®Œæ•´è·¯å¾‘
     * @param {Object} template - æ¨¡æ¿ç‰©ä»¶
     * @returns {string} - è·¯å¾‘æ ¼å¼: {topicPath}/templates/{name}
     */
    function buildTemplatePath(template) {
        const topicPath = template.topicPath || '';
        const name = template.name || template.title?.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9\-]/g, '');
        return topicPath ? `${topicPath}/templates/${name}` : `templates/${name}`;
    }

    // Initialize
