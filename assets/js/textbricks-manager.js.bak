    function findLinkByName(linkName) {
        // First try to search in tree data if available
        if (window.treeData && window.treeData.length > 0) {
            function searchTreeForLink(nodes, parentPath = null) {
                for (const node of nodes) {
                    if (node.type === 'link' && node.path === linkName) {
                        // é™„åŠ ä¸»é¡Œè·¯å¾‘ä¿¡æ¯
                        const linkWithTopic = {
                            ...node.data,
                            topic: parentPath  // å„²å­˜æ‰€å±¬ä¸»é¡Œè·¯å¾‘
                        };
                        return linkWithTopic;
                    }
                    if (node.children && node.children.length > 0) {
                        // å¦‚æœé€™æ˜¯ä¸€å€‹ä¸»é¡Œç¯€é»ï¼Œå°‡å…¶è·¯å¾‘ä½œç‚º parent å‚³éçµ¦å­ç¯€é»
                        const currentParent = node.type === 'topic' ? node.path : parentPath;
                        const found = searchTreeForLink(node.children, currentParent);
                        if (found) return found;
                    }
                }
                return null;
            }

            const link = searchTreeForLink(window.treeData);
            if (link) {
                return link;
            }
        }

        // Alternative: search through all topics' loadedLinks
        if (currentData.topics?.hierarchy?.topicsMap) {
            let topicsToSearch = [];

            if (currentData.topics.hierarchy.topicsMap instanceof Map) {
                topicsToSearch = Array.from(currentData.topics.hierarchy.topicsMap.values());
            } else if (typeof currentData.topics.hierarchy.topicsMap === 'object') {
                topicsToSearch = Object.values(currentData.topics.hierarchy.topicsMap);
            }

            for (const topic of topicsToSearch) {
                if (topic.loadedLinks) {
                    const link = topic.loadedLinks.find(l => l.name === linkName);
                    if (link) {
                        // é™„åŠ ä¸»é¡Œè·¯å¾‘ - ä½¿ç”¨ getItemIdentifier ä¾†ç²å–å®Œæ•´è·¯å¾‘
                        const topicPath = getItemIdentifier(topic, 'topic');
                        return {
                            ...link,
                            topic: topicPath
                        };
                    }
                }
            }
        }

        return null;
    }

